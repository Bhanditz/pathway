<% content_for :title do %>My assessments<% end %>

<% if @current_assessment.blank? and @assessments.blank? %>  
  <%= render 'first_assessment' %>

<% elsif @current_assessment.blank? %> 

  <h2>No assessments in progress</h2>
  <p>Click below to start an assessment. If you would like to see the questions in advance to give you opportunity to prepare your responses you can download the assessment questions as a PDF.</p>
  <%= link_to 'Start an assessment', begin_assessment_path %>
  <%= link_to 'Download assessment qusetions', '#' %>

<% else %>

  <div class = "assessment current">
    <%= content_tag :h4, @current_assessment.title %>
    <%= content_tag :p, @current_assessment.notes %>
    <%= content_tag :p, "Started: #{pretty_date(@current_assessment.start_date)}" %>
    <%= link_to 'Continue assessment', assessment_path(@current_assessment) %>
    <%= link_to 'Delete', assessment_path(@current_assessment), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>

<% end %>

<% for assessment in @assessments %>
  <div class = "assessment">
    <%= content_tag :h4, assessment.title %>
    <%= content_tag :p, assessment.notes %>
    <%= content_tag :p, "Started: #{pretty_date(assessment.start_date)}" %> 
    <%= content_tag :p, "Completed: #{pretty_date(assessment.completion_date)}" %>
    <%= link_to 'View report', report_path(assessment) %>
    <%= link_to 'Delete', assessment_path(assessment), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
<% end %>
