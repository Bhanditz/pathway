<% content_for :title do %>New assessment<% end %>

<h2>My assessments > <%= @assessment.title %></h1>

<hr/>

<div class = "row">
  <div class = "col-md-4">
    
    <% if @assessment.start_date.blank? %>
      <h3>You are about to start a new assessment</h3>
      <p>You can click on the start assessment button to start from the beginning or you can click on one of the 'start' buttons to begin the assessment at a particular activity.</p>
    <% else %>
      <h3><%= @assessment.title %></h3>
      <p>Started <%= pretty_date(@assessment.start_date) %></p>
    <% end %>

  </div>
  <div class = "col-md-8">
  
    <div class="row">
      <div class="col-md-8">
        This assessment is <%= @progress.percentage_progress %>% complete 
      </div>
      <div class="col-md-4">
        <% if @assessment.status == :complete %>
          <%= link_to "Completed", report_path(@assessment) %>
        <% else %>
          <% if @assessment.can_complete? %>
            <%= link_to "Complete assessment", complete_assessment_path(@assessment), method: :post, class: "complete" %>
          <% else %>
            <% if @assessment.status == :not_started %> 
              <%= link_to "Start assessment >", edit_assessment_path(@assessment) %>
            <% else %> 
              <%= link_to "Continue assessment >", continue_assessment_path(@assessment) %>
            <% end %> 
          <% end %>
        <% end %>
      </div>
    </div>

    <%= render 'overview', assessment: @assessment, progress: @progress %>
  </div>
</div>