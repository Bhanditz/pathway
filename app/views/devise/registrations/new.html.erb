<% content_for :title do %><%= t :sign_up_page %><% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="form-group">
        <%= f.label :associated_organisation %><br />
        <%= f.hidden_field :associated_organisation, class: 'select2 ajax', data: { source: organisations_path(format: :json) }, style: "width:40%;" %>
      </div>
      
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
    
      <div class="form-group">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    
      <div class="checkbox">
        <%= f.label :terms_of_service do %>
          <%= f.check_box :terms_of_service %> 
          I accept the <a href="/terms-of-use" target="_register">Terms of use</a>       
        <% end %>
        
      </div>
    
      <div class="row">      
        <div class="col-md-2">
          <%= f.submit t(:sign_up), class: "btn btn-primary btn-lg" %>
        </div>
        
        <div class="col-md-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
    
    
  </div>  
</div>

  <% content_for :javascript_footer do %>
    $(document).ready(function(){ 
      attachTypeAhead(); 
    });
  <% end %>
