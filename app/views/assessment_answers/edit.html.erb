<% content_for :title do %>New assessment<% end %>
<h4>My assessments > <%= @assessment.title %> > <%= @dimension.title %> > <%= @activity.title %> </h4>
<hr/>

<%= form_for @assessment_answer, url: assessment_edit_answer_path(@assessment, @assessment_answer) do |f| %>

  <h3>
    Assessing: <%= @activity.title %>
    <%= f.submit "Save and exit", class: "btn" %>
  </h3>

  <h4><%= @question.text %></h4>

  <%= render 'form', f: f %>
  
  <hr/>

  <p>
    <%= link_to 'Back', assessment_edit_answer_path(@assessment, @previous_answer), class: "btn" if @previous_answer %>
    <%= f.submit "Next question >", class: "btn" %>
  </p>
<% end %>

<% content_for :javascript_footer do %>
  $(document).ready(function(){
    observe_fields_for_links();
  });
<% end %>